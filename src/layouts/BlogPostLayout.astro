---
import { Image } from "@astrojs/image/components";
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
const { title, category, description, image } = frontmatter;
---

<BaseLayout pageTitle={title}>
    <section>
        <article class="container">
            {
                category.map((category) => {
                    return <a href={`/categorys/${category}`}>{category}</a>;
                })
            }

            <Image
                src={image.url}
                height={200}
                aspectRatio="16:9"
                format="avif"
                alt={image.alt}
            />

            <div class="post-content">
                <div class="content">
                    <h1>{title}</h1>
                    <slot />
                </div>

                <p>{description}</p>

                <div class="sidebar"></div>
            </div>
        </article>
    </section>
</BaseLayout>

<style>
    article {
        padding: 0.5rem;
        margin: 0.5rem;
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        border-inline: 1px solid red;
    }
    a {
        background-color: var(--accent);
        color: var(--light);
        padding: 0.5rem;
        text-decoration: none;
        border-radius: 0.2rem;
    }

    h1 {
        text-transform: uppercase;
    }
</style>
