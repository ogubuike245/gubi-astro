---
import Heading from "./Heading.astro";

const featuredPosts = await Astro.glob("../pages/featured/*.md");
---

<section class="section-one">
    <Heading title="Featured" />

    <div class="components">
        {
            featuredPosts.map((post) => {
                return (
                    <article>
                        <a href={post.frontmatter.url}>
                            <p>{post.frontmatter.title}</p>
                        </a>
                    </article>
                );
            })
        }
    </div>
</section>

<style>
    .section-one {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 0.5rem;
        margin-bottom: 1rem;
        border-inline-start: 1px dashed var(--accent);
        border-block-end: 1px dashed var(--accent);
    }

    .section-one .components {
        display: grid;
        grid-template-rows: repeat(3, 1fr);
        gap: 0.5rem;
    }
    .section-one .components article {
        height: 150px;
        background-color: var(--secondary);
        display: flex;
        justify-content: center;
        align-items: center;
        padding-inline: 1rem;
    }

    /* media queries  */
    @media screen and (min-width: 768px) {
        .section-one {
            padding-block-start: 1rem;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .section-one .components {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 0.5rem;
        }
    }
</style>
