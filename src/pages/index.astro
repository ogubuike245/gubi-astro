---
import HeroComponent from "../components/HeroComponent.astro";
import Sidebar from "../components/Sidebar.astro";
import SectionOne from "../components/SectionOne.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import Heading from "../components/Heading.astro";
const heroImage = "./assets/hero.svg";
const pageTitle = "Home Page";
---

<BaseLayout pageTitle={pageTitle}>
    <main>
        <section class="landing">
            <HeroComponent image={heroImage} />
            <aside>
                <Sidebar />
            </aside>
        </section>

        <SectionOne />

        <Heading title="Catgories" />
    </main>
</BaseLayout>

<style>
    .landing {
        display: grid;
        gap: 2rem;
        /* margin-bottom: 2rem; */
        padding: 0.5rem;
        border-inline-end: 2px dotted var(--dark);
        border-block-end: 2px dotted var(--dark);
    }

    aside {
        display: grid;
        grid-template-rows: 1fr 1fr;
        gap: 1rem;
    }

    /* media queries */
    @media screen and (min-width: 678px) {
        .landing {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 0.5rem;
        }
    }
</style>
